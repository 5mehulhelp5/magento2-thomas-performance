<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <referenceContainer name="page.wrapper">
        <container name="homepage.banner" htmlTag="div" htmlId="banner" after="header.container">
            <block class="Magento\Cms\Block\Block" name="banner.block" before="-">
                <arguments>
                    <argument name="block_id" xsi:type="string">homepage-banner</argument>
                </arguments>
            </block>
        </container>
    </referenceContainer>
</page>

<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="header.links" remove="true"/>
        <referenceBlock name="currency" remove="true"/>
        <referenceContainer name="compare-link-wrapper" remove="true"/>
        <referenceContainer name="header.panel">
            <block class="Magento\Cms\Block\Block" name="pre.header.message" before="-">
                <arguments>
                    <argument name="block_id" xsi:type="string">pre-header-message</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>

<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="page.wrapper">
            <container name="contactpage.banner" htmlTag="div" htmlId="banner" after="page.top">
                <block
                    name="contactpage.banner.block"
                    template="Magento_Contact::banner.phtml"
                    before="-"
                />
            </container>
        </referenceContainer>
    </body>
    <move
        element="page.main.title"
        destination="div.sidebar.additional"
        before="-"
    />
</page>
